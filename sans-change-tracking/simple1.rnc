include "common-sans.rnc"

sectioncore = 
   element text:section {
      attribute * {text}*,
      element text:p { 
         "There is no change tracking in this.",
         ( attribute text:* { text } )*
      },
      element text:p { 
         "Just some simple paragraph content here.",
         ( attribute text:* { text } )*
      },
      element text:p { 
         #"Though some with bold and italic styles.",
         text,
         ( attribute text:* { text } )*,
         element text:span {
            attribute text:style-name {"T1"},
            "bold"
         },
         text,
         element text:span {
            attribute text:style-name {"T2"},
            "italic"
         },
         text
      },
      element text:p { 
         "",
         ( attribute text:* { text } )*
      }
   }
